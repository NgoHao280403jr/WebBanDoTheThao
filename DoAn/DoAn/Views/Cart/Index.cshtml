@model List<DoAn.Models.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@{  
    int i = 1; 
    int totPrice = 0;
    var userId = Context.Request.Cookies["Id"];
}

<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">

                        <div class="row">

                            <div class="col-lg-7">
                                <h5 class="mb-3">
                                    <a href="/Product/Index" class="text-body">
                                        <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                                    </a>
                                </h5>
                                <hr>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <p class="mb-1">Shopping cart</p>
                                        
                                    </div>
                                </div>
                                @foreach (var item in Model)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div class="d-flex flex-row align-items-center">
                                                    <div>
                                                        <img src="~/image/@item.Product.Image"
                                                             class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                                    </div>
                                                    <div class="ms-3">
                                                        <h5>@item.Product.ProductName</h5>
                                                        <p class="small mb-0">@item.Product.Category.CatelogyName</p>
                                                    </div>
                                                </div>

                                                <div class="d-flex flex-row align-items-center">
                                                    @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Get, new { style = "width: 120px; height: 40px; display: flex; flex-direction: row; align-items: center;" }))
                                                    {
                                                        <input type="number" value="@item.Quantity" name="quan" min="1" style="width: 50px; margin-right: 5px;" />
                                                        <input type="hidden" name="proid" value="@item.ProductId" />
                                                        <input type="hidden" name="idUser" value="@item.UserId" />
                                                        <button type="submit" style="height: 30px;" class="btn btn-light">
                                                            <i class="fa-solid fa-check" style="color: #c6d7dd;"></i>
                                                        </button>
                                                    }
                                                    <div style="width: 100px;">
                                                        <h5 class="mb-0">
                                                            @{
                                                                int Price = item.Quantity * Convert.ToInt32(item.Product.Price);

                                                                i++;
                                                                totPrice += Price;
                                                            }
                                                            @Price.ToString("N0") VNĐ
                                                        </h5>
                                                    </div>
                                                    @using (Html.BeginForm("Delete", "Cart"))
                                                    {
                                                        <input type="hidden" name="id" value="@item.CartId" />
                                                        <input type="hidden" name="idUser" value="@item.UserId" />
                                                        <button type="submit" class="btn btn-light">
                                                            <i class="fas fa-trash-alt"></i>

                                                        </button>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-lg-5">

                                <div class="card bg-primary text-white rounded-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <h5 class="mb-0">Card details</h5>
                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-6.webp"
                                                 class="img-fluid rounded-3" style="width: 45px;" alt="Avatar">
                                        </div>

                                        <p class="small mb-2">Card type</p>
                                        <a href="#!" type="submit" class="text-white">
                                            <i class="fab fa-cc-mastercard fa-2x me-2"></i>
                                        </a>
                                        <a href="#!" type="submit" class="text-white">
                                            <i class="fab fa-cc-visa fa-2x me-2"></i>
                                        </a>
                                        <a href="#!" type="submit" class="text-white">
                                            <i class="fab fa-cc-amex fa-2x me-2"></i>
                                        </a>
                                        <a href="#!" type="submit" class="text-white"><i class="fab fa-cc-paypal fa-2x"></i></a>

                                        <form class="mt-4" action="/Pay/Add">
                                            <div class="  mb-4">
                                                <input type="text" id="typeName" name="HoTenKH" class="form-control form-control-lg" placeholder="Cardholder's Name" />
                                                <label class="form-label" for="typeName">Cardholder's Name</label>
                                            </div>

                                            <div class="  mb-4">
                                                <input type="text" id="typeText" name="SDT" class="form-control form-control-lg"
                                                       placeholder="09*******"/>
                                                <label class="form-label" for="typeText">Phone Number</label>
                                            </div>

                                            <div class="row mb-4">
                                                <div class="col-md-6">
                                                    <div class=" ">
                                                        <input type="text" id="typeExp" name="DiaChi" class="form-control form-control-lg"
                                                               placeholder="Address"/>
                                                        <label class="form-label" for="typeExp">Address</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class=" ">
                                                        <select name="HinhThucTT" placeholder="CCV or COD" class="form-control form-control-lg">
                                                            <option value="CCV">CCV</option>
                                                            <option value="COD">COD</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="my-4">
                                            <br />
                                            <br />

                                            <div class="d-flex justify-content-between mb-4">
                                                <p class="mb-2">Total: </p>
                                                <p class="mb-2">@totPrice.ToString("N0") VNĐ</p>
                                                <input type="hidden" name="TienTT" value="@totPrice" />
                                                <input type="hidden" name="UserId" value="@userId.Value" />
                                            </div>

                                            <button class="btn btn-info btn-block btn-lg">
                                               Check Out
                                            </button>
                                        </form>

                                        

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>